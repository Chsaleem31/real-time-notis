<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name, "Full name" %>
        <%= f.text_field :name, class: "form-control", autofocus: true, required: true, autocomplete: "name" %>
      </div>

      <div class="form-group">
        <%= f.label :phone_number, "Phone number" %>
        <%= f.text_field :phone_number, class: "form-control", required: true, placeholder: "+1XXXXXXXXXX" %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", required: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password" , required: true %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", required: true %>
      </div>

      <div class="form-group text-center my-2">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
